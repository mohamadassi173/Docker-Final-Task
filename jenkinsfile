pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials('docker_flask')
	}

	stages {

		stage('Build') {

			steps {
				sh 'sudo docker build -t mohamdassi173/bitcoin-flask:latest .'
			}
		}

		stage('Login') {

			steps {
				sh 'sudo echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {

			steps {
				sh 'sudo docker push mohamdassi173/bitcoin-flask:latest'
			}
		}
	}

	post {
		always {
			sh 'sudo docker logout'
		}
	}

}
